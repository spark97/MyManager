<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mnnit.harshitshah.mymanager.check"
    android:id="@+id/R"
    android:background="#400945"
    >
    <fragment
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:name="Topfragment"
        android:id="@+id/fragment"
        tools:layout="@layout/topfragment2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start A New Budget"
        android:id="@+id/startnew"
        android:nestedScrollingEnabled="false"
        android:onClick="startnew"
        android:background="#c699bf"
        android:layout_below="@+id/fragment"
        android:layout_marginTop="91dp"
        android:layout_alignRight="@+id/manageexisting"
        android:layout_alignEnd="@+id/manageexisting"
        android:layout_alignLeft="@+id/manageexisting"
        android:layout_alignStart="@+id/manageexisting" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Existing Budget"
        android:id="@+id/manageexisting"
        android:layout_below="@+id/startnew"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:onClick="manage"
        android:shadowColor="#ff4dee"
        android:background="#c699bf" />

</RelativeLayout>
